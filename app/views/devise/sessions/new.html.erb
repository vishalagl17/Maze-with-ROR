<div class="loginPageFullConatiner">

  <div class="loginPageTopNavbar">
    <%= image_tag "MazeImageLoginPage.png",class: "MazeImageLoginPage" %>
    <h1  style="margin-left: 25px ; color: white"> MAZE </h1>
  </div>
  <hr color="#377DFF">

  <div class="loginPageLoginConatiner">

    <h1 style="color: white; ">Log in</h1>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field ">
        <%= f.label :email, class: "loginPageEmailPasswordText"%><br />
        <%= f.email_field :email, class:"loginPageEmailTextField", autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.label :password ,class:"loginPageEmailPasswordText"%><br />
          <%= f.password_field :password,class:"loginPagePasswordTextField", autocomplete: "current-password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me, class:"loginPageCheckBox" %>
          <%= f.label :remember_me, class:"loginPageRemeberMe" %>
        </div>
      <% end %>
      <br>
      <br>

      <div class="actions">
        <%= f.submit "Log in", class:"loginPageLogInButton" %>
      </div>
    <% end %>

    <%= render "devise/shared/links",class:"loginPageForgetPasswordText" %>

  </div>


</div>
