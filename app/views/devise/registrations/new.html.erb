<div class="loginPageFullConatiner">

  <div class="loginPageTopNavbar">
    <%= image_tag "MazeImageLoginPage.png",class: "MazeImageLoginPage" %>
    <h1  style="margin-left: 25px ; color: white"> MAZE </h1>
  </div>
  <hr color="#377DFF">

  <div class="loginPageLoginConatiner">
    <h2 style="color: white">Sign up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field ">
        <%= f.label :email, class: "loginPageEmailPasswordText"%><br />
        <%= f.email_field :email, class:"loginPageEmailTextField", autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.label :password ,class:"loginPageEmailPasswordText"%><br />
        <% if @minimum_password_length %>
          <em class="loginPageEmailPasswordText">(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password,class:"loginPagePasswordTextField", autocomplete: "new-password" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation ,class:"loginPageEmailPasswordText"%><br />
        <%= f.password_field :password_confirmation,class:"loginPagePasswordTextField", autocomplete: "new-password" %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up", class:"loginPageLogInButton" %>
      </div>

    <% end %>

    <%= render "devise/shared/links",class:"loginPageForgetPasswordText" %>
  </div>




</div>


